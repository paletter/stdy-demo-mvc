<beans xmlns="http://www.springframework.org/schema/beans"  
 xmlns:context="http://www.springframework.org/schema/context"  
 xmlns:p="http://www.springframework.org/schema/p"  
 xmlns:mvc="http://www.springframework.org/schema/mvc"  
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
 xsi:schemaLocation="http://www.springframework.org/schema/beans  
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd  
      http://www.springframework.org/schema/context  
      http://www.springframework.org/schema/context/spring-context.xsd  
      http://www.springframework.org/schema/mvc  
      http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">
    <!-- mvc-3.0 not support <mvc:exclude-mapping> configuration -->
    <!-- mvc-3.2 support <mvc:exclude-mapping> configuration -->

	<!-- start spring annotation -->
	<mvc:annotation-driven/>      
	
    <!-- start spring scan, scan annotation to bean -->
    <context:component-scan base-package="com.demo" />
  	
  	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver" p:prefix="/WEB-INF/view/" p:suffix=".html" />
  	
  	<!-- spring interceptors -->
  	<mvc:interceptors>
  		<mvc:interceptor>
  			<mvc:mapping path="/**"/>
  			<mvc:exclude-mapping path="/anyone*"/>
  			<bean class="com.demo.demo_mvc.MyInterceptor"></bean>
  		</mvc:interceptor>
  	</mvc:interceptors>
      
</beans>